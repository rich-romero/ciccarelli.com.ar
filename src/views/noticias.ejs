<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>

<body>
    <%- include('./partials/header'); %>
    <%- include('./partials/nav'); %>
    <main>



        <h4 style="margin-left: 50px; margin-top: 10px;">NOTICIAS</h4>

        <div class="containernoticias">


            <% noticia.forEach(noticia => { %>

            <div>
                <a href="/noticias/<%= noticia.id %>/">


                    <article class="module-news">

                        <div class="volanta">

                            <span class="cat">Ciccarelli</span>

                            <span class="date"><%= noticia.fecha %> </span>
                        </div>

                        <h2><%= noticia.titulo %> </h2>


                        <% if (noticia.imagen) { %>
                            <div class="imgcardnoticia">
                                       <img src="/images/noticias/<%= noticia.imagen %> " alt="">
                        
                            </div>    
                        <% } %>
                        
                        <p><%= noticia.descripcion %></p>

                    </article>
                </a>
            </div>


            <% }) %>


        </div>





    </main>

    <%- include('./partials/footer'); %>


    <%- include('./partials/scripts'); %>

</body>

</html>